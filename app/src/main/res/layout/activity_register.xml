<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-6dp"

        android:src="@drawable/logo" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="385dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="421dp"
        android:gravity="center"
        android:text="Full Name    :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="214dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="418dp"
        android:background="@drawable/shapes"
        android:gravity="center"
        android:hint="Full Name"
        android:textAlignment="center" />


    <TextView
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="271dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="348dp"
        android:gravity="center"
        android:text="Email             :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="328dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="347dp"
        android:background="@drawable/shapes"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="257dp"
        android:layout_marginBottom="209dp"
        android:gravity="center"
        android:text="Password     :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="439dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="206dp"
        android:background="@drawable/shapes"
        android:gravity="center"
        android:hint="Password"
        android:maxLength="8"
        android:textAlignment="center" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="493dp"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="281dp"
        android:gravity="center"
        android:text="Contact         :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="549dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="279dp"
        android:background="@drawable/shapes"
        android:gravity="center"
        android:hint="Contact Number"
        android:inputType="number"
        android:maxLength="10"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_reg"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="129dp"
        android:backgroundTint="	#00BFFF"
        android:text="Register"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="97dp"
        android:layout_marginBottom="82dp"
        android:gravity="center"
        android:text="Already Have An Account?"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button_login_in_register"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#00FF7F"
        android:text="Log In"
        android:textColor="#fff"
        android:textStyle="bold" />


</RelativeLayout>