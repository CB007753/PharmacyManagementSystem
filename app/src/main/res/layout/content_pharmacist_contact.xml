<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <TextView
        android:id="@+id/user_contact_page_info_text_view"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="553dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Type your message which you need to send to the Admin"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_contact_edit_text"
        android:layout_width="352dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/shapes"
        android:layout_marginBottom="406dp" />

    <Button
        android:id="@+id/contact_submit_button"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="241dp"
        android:backgroundTint="#00BFFF"
        android:text="Submit"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/msg_sent_image_view"
        android:layout_width="320dp"
        android:layout_height="349dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="216dp" />
    <TextView
        android:id="@+id/msg_sent_text_view"
        android:layout_width="380dp"
        android:layout_height="77dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="115dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/user_contact_home_button"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="55dp"
        android:backgroundTint="#00FF7F"
        android:text="Back to Home"
        android:textColor="#fff"
        android:textStyle="bold|italic"
        android:layout_marginEnd="82dp" />


</RelativeLayout>